
<%= form_for([@post, @post.comments.build]) do |f| %>

<div class="form-group">
   <%= f.label :name %>
   <%= f.text_field :name, class: "form-control" %>
</div>

<div class="form-group">
   <%= f.label :comment %><br>
   <%= f.text_area :body, class: "form-control" %>
</div>
<br>

<div class="form-group">
   <%= f.submit "Create Comment", class: "btn btn-info"%>
</div>
<% end %>
